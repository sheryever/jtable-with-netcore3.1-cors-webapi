@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <h3>Web Api from same Web Application</h3>
        <div class="jtable-lite" id="tableContainer"></div>
        <h3>Web Api from different Web Application</h3>
