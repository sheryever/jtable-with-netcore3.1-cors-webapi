    </div>

@section Head
{

    <link href="~/lib/jquery-ui/jquery-ui-1.custom-jtable.css" rel="stylesheet" />
    <link href="~/lib/jtable/themes/lite/inspania/jtable-lite.css" rel="stylesheet" />
}

@section Scripts
{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-migrate/jquery-migrate.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui-1.9.2.custom.min.js"></script>

    <script src="~/lib/jtable/jquery.jtable.min.js"></script>

    <script>

        $(function() {

            $("#tableContainer").jtable({
                title: 'test',
                //actions: {
                //    listAction: 'https://localhost:44343/product/GetAllProducts',
                //    createAction: 'https://localhost:44343/product/AddNewProduct',
                //    updateAction: 'https://localhost:44343/product/EditProduct',
                //    deleteAction: 'https://localhost:44343/product/DeleteProduct'
                //},
                actions: {
                    listAction: 'product/GetAllProducts',
                    createAction: 'product/AddNewProduct',
                    updateAction: 'product/EditProduct',
                    deleteAction: 'product/DeleteProduct'
                },
                fields: {
                    Id: {
                        key: true,
